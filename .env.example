# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/price_tracker
# For SQLite: sqlite:///./price_tracker.db

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=your_email@gmail.com
EMAIL_TO=recipient1@example.com,recipient2@example.com

# API Keys
EBAY_CLIENT_ID=your_ebay_client_id
EBAY_CLIENT_SECRET=your_ebay_client_secret
BACK_MARKET_API_KEY=your_back_market_api_key

# Scraping Configuration
SCRAPING_DELAY=2
MAX_RETRIES=3
TIMEOUT=30
USE_PROXY=false
PROXY_LIST=proxy1:port,proxy2:port

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/price_tracker.log

# Application Settings
DEFAULT_CURRENCY=USD
PRICE_CHANGE_THRESHOLD=5.0
MAX_PRICE_RECORDS_PER_MODEL=1000